<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".onboard3">

    <ImageView
        android:layout_width="79dp"
        android:layout_height="64dp"
        android:src="@drawable/ats_kiri"
        android:layout_alignParentLeft="true"/>
    <ImageView
        android:layout_width="105dp"
        android:layout_height="109dp"
        android:src="@drawable/ats_kanan"
        android:layout_alignParentRight="true"/>
    <ImageView
        android:layout_width="92dp"
        android:layout_height="87dp"
        android:src="@drawable/bwh_kiri"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"/>
    <ImageView
        android:layout_width="105dp"
        android:layout_height="105dp"
        android:src="@drawable/bwh_kanan"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true">
        <ImageView
            android:layout_width="150dp"
            android:layout_height="153.3dp"
            android:src="@drawable/on3"
            android:layout_gravity="center_horizontal"/>
        <ImageView
            android:layout_width="242dp"
            android:layout_height="wrap_content"
            android:src="@drawable/logo"
            android:layout_marginTop="40.7dp"
            android:layout_gravity="center_horizontal"/>
        <TextView
            android:layout_width="281dp"
            android:layout_height="wrap_content"
            android:text="Supply dan Penjualan Sayuran"
            android:textAlignment="center"
            android:layout_marginTop="12dp"
            android:textSize="24dp"
            android:fontFamily="@font/poppins_bold"
            android:textColor="#564734"/>
        <Button
            android:id="@+id/btnLogin"
            android:layout_width="268dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:background="@drawable/button_onboard"
            android:text="Masuk"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="26dp"
            android:fontFamily="@font/poppins_bold"/>
        <Button
            android:id="@+id/btnRegister"
            android:layout_width="268dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_onboard"
            android:text="Daftar"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="24dp"
            android:fontFamily="@font/poppins_bold"/>
    </LinearLayout>
</RelativeLayout>